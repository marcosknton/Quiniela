<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_inforesultados"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.michus.quiniela.inforesultadosFragment"
    tools:showIn="@layout/activity_inforesultados">


    <ImageView
        android:layout_width="60dp"
        android:layout_height="0dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/Ivdos"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintRight_toRightOf="parent"
         />

    <TextView
        android:text="Tvlocal"
        android:layout_width="101dp"
        android:layout_height="0dp"
        android:id="@+id/Tvlocal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guideline" />

    <TextView
        android:text="Tvvisitante"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/Tvvisitante"
        app:layout_constraintLeft_toRightOf="@+id/Tvlocal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintRight_toLeftOf="@+id/Ivuno"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="1.0" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="74dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="74dp"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="0dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/Ivuno"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintRight_toLeftOf="@+id/Ivequis"
         />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="74dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/Ivequis"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintRight_toLeftOf="@+id/Ivdos"
         />
</android.support.constraint.ConstraintLayout>
